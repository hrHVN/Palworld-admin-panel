<%- include('./modules/header.ejs') %>

    <body>
        <%- include('./modules/navigation.ejs') %>
        <div class="container">
            <!-- Sidebar -->
            <aside class="sidebar">
                <% data.forEach(player => { %>
                    <div class="player-info">
                        <p><%= player.playerName %> <small>(<%= player.currentLevel %>)</small></p>
                        <ul>
                            <li>Online: <%= player.timeSinceLastConnect %></li>
                            <li>X: <%= player.coords.x %></li>
                            <li>Y: <%= player.coords.y %></li>
                        </ul>
                    </div>
                <% }) %>
            </aside>
    
            <!-- Main Content -->
            <main class="main-content">
                <section class="server-info-section">
                    <div class="info-header">
                        <h1><%= info.servername %></h1>
                        <div class="info-metrics">
                            <p><small><%= info.version %></small></p>
                            <p><small>fps <%= metrics.serverfps %></small></p>
                            <p><small>uptime <%= metrics.uptime %></small></p>
                        </div>
                    </div>
                    <div>
                        <p><%= info.description %></p>
                    </div>
                </section>
                <section>
                    <% if (players.length === 0 || players === null) { %>
                        <div class="playerCard">
                            <h4>No one is online at this moment...</h4>
                        </div>
                    <% } else { %>
                        <% players.forEach(p => { %>
                            <div class="playerCard">
                                <h4>
                                    <%= p.name %>
                                    <span><%= parseFloat(p.ping,2) %> ms</span>
                                </h4>
                                <p>lvl: <%= p.level %></p>
                                <p>coords(x,y): <%= //p.coords.x %> <%= //p.coords.y %></p>
                                <!-- <button onclick="kickPlayer('<%= p.playerId %>')">Kick</button>
                                <button onclick="banPlayer('<%= p.playerId %>')">Ban</button>
                                <button onclick="unBanPlayer('<%= p.playerId %>')">UnBan</button> -->
                            </div>
                        <% }) %>
                    <% } %>
                </section>
            </main>
        </div>
            <%- include('./modules/footer.ejs') %>
    </body>